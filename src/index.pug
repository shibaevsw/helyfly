doctype html
html
    head
        meta(charset='utf-8')
        title Example
        meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=0.5, maximum-scale=2.0")
    body.body
        header.header
            .header__bar.content-container
                a(href='#')
                    img(src='./src/img/logo.svg').logo.header__logo
                .header__phone <span class="header__phone-color">Телефон:</span> 8(800)-123-12-12
            .main-promo.site-container
                .main-promo__content.content-container
                    h1.main-promo__heading
