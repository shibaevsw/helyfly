.info-promo
  display flex
  justify-content space-between
  margin-top 70px
  &__heading
    font-weight 500
    font-size 40px
  &__text
    padding-right 60px
    font-size 18px
    line-height 26px
  &__list
    list-style none
    padding-left 0
  &__list-element
    margin-bottom 25px
    font-weight 500
    font-size 14px
  &__list-img
    vertical-align middle
    margin-right 10px
  &__review
    padding 30px 0
    border-top 0.5px solid #C7C7C7
    border-bottom 0.5px solid #C7C7C7
  &__review-img
    vertical-align middle
    margin-right 10px
  &__textcontent
    font-size: 18px
  &__review-stars
    margin-left 5px
